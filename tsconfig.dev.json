{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/main/**/*", "src/services/DatabaseService.ts", "src/services/S3Service.ts", "src/config/config.ts"],
  "exclude": ["node_modules", "dist", "src/components/**/*", "src/pages/**/*", "src/stores/**/*", "src/types/**/*", "src/utils/**/*"]
} 